{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "API",
      "cwd": "${workspaceFolder}/apps/api",
      "program": "${workspaceFolder}/apps/api/src/index.ts",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--enable-source-maps",
        "--import",
        "tsx"
      ],
      "preLaunchTask": "build:contracts",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Bot",
      "cwd": "${workspaceFolder}/apps/bot",
      "program": "${workspaceFolder}/apps/bot/src/index.ts",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--enable-source-maps",
        "--import",
        "tsx"
      ],
      "preLaunchTask": "build:contracts",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "API+Bot",
      "configurations": [
        "API",
        "Bot"
      ],
      "stopAll": true
    }
  ]
}

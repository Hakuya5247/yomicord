{
  "name": "yomicord",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "dev:api": "pnpm --filter @yomicord/api dev",
    "dev:bot": "pnpm --filter @yomicord/bot dev",
    "dev:contracts": "pnpm --filter @yomicord/contracts dev",
    "format": "pnpm -w exec prettier . --write",
    "format:check": "pnpm -w exec prettier . --check",
    "lint": "pnpm -w exec eslint .",
    "lint:fix": "pnpm -w exec eslint . --fix",
    "check": "pnpm format:check && pnpm lint && pnpm build",
    "check:all": "pnpm check && pnpm test",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter @yomicord/api build",
    "build:bot": "pnpm --filter @yomicord/bot build",
    "build:contracts": "pnpm --filter @yomicord/contracts build",
    "typecheck:contracts": "pnpm --filter @yomicord/contracts exec tsc -p tsconfig.json --noEmit",
    "typecheck:api": "pnpm --filter @yomicord/api exec tsc -p tsconfig.json --noEmit",
    "typecheck:bot": "pnpm --filter @yomicord/bot exec tsc -p tsconfig.json --noEmit",
    "start:api": "pnpm --filter @yomicord/api start",
    "test": "vitest run"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^15.15.0",
    "prettier": "^3.7.4",
    "vitest": "^3.2.4"
  }
}
